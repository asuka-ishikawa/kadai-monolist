<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_item_path, method: :get, class: 'form-inline') do %>
      <!--form_for:モデルのインスタンスを指定せず<form>タグを生成 検索ワード入力フォームだが対応モデルを作成する必要なし</form>-->
      <!--rails routesで確認///new_item_path は GETメソッドを指定(デフォルトだとPOSTメソッドなので)-->
        <div class="form-group">
          <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
          <!--text_field_tagもモデルのインスタンスを指定しない///controllerでは params[:keyword] で取得する-->
          <!--cf.モデルのインスタンス指定する場合///f.text_field のように f があったが、form_tagにはない-->
        </div>
        <%= submit_tag '商品を検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'items/items', items: @items %>